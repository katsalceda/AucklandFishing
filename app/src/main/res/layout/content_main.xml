<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rktechltd.aucklandfishing.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/bgmenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY FISHING EXPERIENCE"
        android:id="@+id/buttonXP"
        android:layout_marginTop="53dp"
        android:background="#00ffffff"
        android:textSize="40dp"
        android:textColor="#00ffffff"
        android:onClick="buttonXP"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECKLIST"
        android:id="@+id/buttonChecklist"
        android:background="#00ffffff"
        android:textSize="40dp"
        android:textColor="#00ffffff"
        android:onClick="buttonChecklist"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/buttonRules"
        android:layout_alignEnd="@+id/buttonFish" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NETRULES"
        android:id="@+id/buttonRules"
        android:textSize="45dp"
        android:background="#00ffffff"
        android:textColor="#00ffffff"
        android:onClick="buttonRules"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/buttonChecklist" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FISHES"
        android:id="@+id/buttonFish"
        android:background="#00ffffff"
        android:textSize="50dp"
        android:textColor="#00ffffff"
        android:nestedScrollingEnabled="false"
        android:onClick="buttonFish"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonFaqs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQShit"
        android:id="@+id/buttonFaqs"
        android:textSize="45dp"
        android:background="#00ffffff"
        android:textColor="#00ffffff"
        android:onClick="buttonFaqs"
        android:layout_below="@+id/buttonRules"
        android:layout_alignEnd="@+id/buttonRules"
        android:layout_marginTop="53dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
