<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rktechltd.aucklandfishing.MyFishingXPActivity"
    tools:showIn="@layout/activity_my_fishing_xp"
    android:background="@drawable/bgxp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location name"
        android:id="@+id/textView16"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfLocationName"
        android:ems="13"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location coordinates"
        android:layout_marginTop="15dp"
        android:id="@+id/textView17"
        android:typeface="sans"
        android:textColor="#000000"
        android:layout_below="@+id/tfLocationName"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="+ Add Catch"
        android:id="@+id/tvAddCatch"
        android:textColor="#ff4101"
        android:clickable="true"
        android:onClick="tvAddCatch"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView16" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGetLoc"
        android:src="@drawable/location"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/xpid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S A V E"
        android:id="@+id/buttonSaveXP"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:onClick="buttonSaveXP"
        android:background="#96ffffff"
        android:textSize="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tflat"
        android:ems="8"
        android:hint="Latitude"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tflong"
        android:ems="8"
        android:layout_below="@+id/tflat"
        android:layout_alignStart="@+id/tflat"
        android:hint="Longitude" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/xpid"
        android:layout_above="@+id/tfLocationName"
        android:layout_alignEnd="@+id/tfLocationName"
        android:visibility="invisible" />
</RelativeLayout>
